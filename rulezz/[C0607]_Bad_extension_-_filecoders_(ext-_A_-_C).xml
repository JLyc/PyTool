<?xml version="1.0" encoding="utf-8"?>
<rule>
<name>Bad extension - filecoders (ext. A - C) [C0607]</name>
<!-- rev 20170111 -->
<severity>Threat</severity>
<Process>
	<operator type="AND">
		<Condition component="LiveGrid" property="Reputation" condition="greater" value="20" />
		</operator >
</Process>
<operations>
		<operation type="WriteFile">
			<operator type="OR">
				<!-- only extensions with size more than 3 are included starting with A-C -->
				<!-- extensions without comments are gathered from external resources -->
				<condition component="FileItem" property="Extension" condition="ends" value="adamlars" /><!-- MSIL/Filecoder.C/AC/BU -->
				<condition component="FileItem" property="Extension" condition="ends" value="AES256" /><!-- more variants use this -->
				<condition component="FileItem" property="Extension" condition="ends" value="amba" /><!-- Win32/Filecoder.AU -->
				<condition component="FileItem" property="Extension" condition="ends" value="badnews" /><!-- Win32/Filecoder.FS -->
				<condition component="FileItem" property="Extension" condition="ends" value="bart" />
				<condition component="FileItem" property="Extension" condition="ends" value="better_call_saul" /><!-- Win32/Filecoder.ED -->
				<condition component="FileItem" property="Extension" condition="ends" value="bitcrypt" />
				<condition component="FileItem" property="Extension" condition="ends" value="bitstak" />
				<condition component="FileItem" property="Extension" condition="ends" value="bleepYourFiles" />
				<condition component="FileItem" property="Extension" condition="ends" value="blocatto" />
				<condition component="FileItem" property="Extension" condition="ends" value="block" /><!-- MSIL/Filecoder.C/AC/BU -->
				<condition component="FileItem" property="Extension" condition="ends" value="blocked" /><!-- more variants use this -->
				<condition component="FileItem" property="Extension" condition="ends" value="bloked" /><!-- Win32/Filecoder.NDO -->
				<condition component="FileItem" property="Extension" condition="ends" value="bnmntftfmn" /><!-- Win32/Filecoder.NDO -->
				<condition component="FileItem" property="Extension" condition="ends" value="breaking_bad" /><!-- Win32/Filecoder.ED -->
				<condition component="FileItem" property="Extension" condition="ends" value="btc-help-you" />
				<condition component="FileItem" property="Extension" condition="ends" value="btcbtcbtc" />
				<condition component="FileItem" property="Extension" condition="ends" value="CCCRRRPPP" /><!-- MSIL/Filecoder.C/AC/BU -->
				<condition component="FileItem" property="Extension" condition="ends" value="canihelpyou" />
				<condition component="FileItem" property="Extension" condition="ends" value="centrumfr@india.com!!" /><!-- Win32/Filecoder.FT -->
				<condition component="FileItem" property="Extension" condition="ends" value="cerber" /><!-- Win32/Filecoder.Cerber -->
				<condition component="FileItem" property="Extension" condition="ends" value="cerber2" /><!-- Win32/Filecoder.Cerber -->
				<condition component="FileItem" property="Extension" condition="ends" value="cerber3" /><!-- Win32/Filecoder.Cerber -->
				<condition component="FileItem" property="Extension" condition="ends" value="ChipDale" /><!-- Win32/Filecoder.NCN/DT -->
				<condition component="FileItem" property="Extension" condition="ends" value="CoDe" /><!-- more variants use this -->
				<condition component="FileItem" property="Extension" condition="ends" value="coverton" /><!-- Win32/Filecoder.Coverton -->
				<condition component="FileItem" property="Extension" condition="contains" value="coderksu@gmail_com_" /><!-- Win32/Filecoder.CK -->
				<condition component="FileItem" property="Extension" condition="ends" value="crime" />
				<condition component="FileItem" property="Extension" condition="ends" value="crinf" /><!-- Win32/Filecoder.Infinite -->
				<condition component="FileItem" property="Extension" condition="ends" value="cripaaaa" /><!-- Win32/Filecoder.NDO -->
				<condition component="FileItem" property="Extension" condition="ends" value="criptiko" /><!-- Win32/Filecoder.NDO -->
				<condition component="FileItem" property="Extension" condition="ends" value="criptoko" />
				<condition component="FileItem" property="Extension" condition="ends" value="criptokod" />
				<condition component="FileItem" property="Extension" condition="ends" value="cripttt" /><!-- Win32/Filecoder.NDO -->
				<condition component="FileItem" property="Extension" condition="ends" value="crjoker" /><!-- MSIL/Filecoder.CryptoJoker -->
				<condition component="FileItem" property="Extension" condition="ends" value="crptrgr" />
				<condition component="FileItem" property="Extension" condition="ends" value="CRRRT" />
				<condition component="FileItem" property="Extension" condition="ends" value="cryp1" /><!-- Win32/Filecoder.CryptProjectXXX -->
				<condition component="FileItem" property="Extension" condition="ends" value="crypt" /><!-- more variants use this -->
				<condition component="FileItem" property="Extension" condition="ends" value="crypt38" />
				<condition component="FileItem" property="Extension" condition="ends" value="crypted" /><!-- more variants use this -->
				<condition component="FileItem" property="Extension" condition="ends" value="crypted_file" /><!-- Win32/Filecoder.NIC -->
				<condition component="FileItem" property="Extension" condition="ends" value="crypto" />
				<condition component="FileItem" property="Extension" condition="ends" value="CryptoTorLocker2015!" />
				<condition component="FileItem" property="Extension" condition="ends" value="crypz" /><!-- Win32/Filecoder.CryptProjectXXX -->
				<condition component="FileItem" property="Extension" condition="ends" value="CrySiS" /><!-- Win32/Filecoder.Crysis -->
				<condition component="FileItem" property="Extension" condition="ends" value="ctb2" /><!-- Win32/Filecoder.CTBLocker -->
				<condition component="FileItem" property="Extension" condition="ends" value="ctbl" /><!-- Win32/Filecoder.CTBLocker -->
				<condition component="FileItem" property="Extension" condition="ends" value="czvxce" /><!-- Win32/Filecoder.Coverton -->
			</operator>
		</operation>
</operations>
</rule>