<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>Powershell CurrentUser_AllHosts profile modified [A0119]</name>
	<severity>Warning</severity>
	<Operations>
		<Operation type="WriteFile">
				<Condition component="FileItem" property="FullPath" condition="is" value="%HOME%\Documents\profile.ps1" />
		</Operation>
	</Operations>
</rule>
