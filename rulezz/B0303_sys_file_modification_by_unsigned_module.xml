<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>SYS file modification by unsigned module [B0303]</name>
	<severity>Warning</severity>
	<process>
		<operator type="AND">
			<condition component="Module" property="Signed" condition="isnot" value="1" />
			<condition component="FileItem" property="Name" condition="isnot" value="EIAgent" /> <!-- Just for alpha testing. That binary will be signed later. -->
			<condition component="FileItem" property="Name" condition="isnot" value="ETWMonitor" /> <!-- Just for alpha testing. That binary will be signed later. -->
		</operator>
	</process>
	<operations>
		<operation type="WriteFile">
			<condition component="FileItem" property="Extension" condition="is" value="sys" />
		</operation>
	</operations>
</rule>