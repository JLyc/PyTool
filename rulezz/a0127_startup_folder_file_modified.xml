<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>File modified in %startup% folder [A0127]</name>
	<severity>warning</severity>
	<Operations>
		<Operation type="WriteFile">
			<Operator type="OR">
				<Condition component="FileItem" property="Path" condition="contains" value="%STARTUP%" />
				<Condition component="FileItem" property="Path" condition="contains" value="%COMMONSTARTUP%" />
			</Operator>
		</Operation>
	</Operations>
</rule>