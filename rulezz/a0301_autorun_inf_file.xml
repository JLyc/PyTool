<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>Autorun.inf file was created/deleted [A0301]</name>
	<severity>Information</severity>
	<operations>
		<operation type="WriteFile">
			<operator type="AND">
				<condition component="FileItem" property="Name" condition="is" value="autorun" />
				<condition component="FileItem" property="Extension" condition="is" value="inf" />
			</operator>
		</operation>
		<operation type="DeleteFile">
			<operator type="AND">
				<Condition component="FileItem" property="Name" condition="is" value="autorun" />
				<Condition component="FileItem" property="Extension" condition="is" value="inf" />
			</operator>
		</operation>
	</operations>
</rule>