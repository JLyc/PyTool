<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>PowerShell script block logging modified [A0207]</name>
	<severity>Warning</severity>
	<Operations>
		<Operation type="RegSetValue">
			<operator type="AND">
				<operator type="OR">
					<Condition component="RegistryItem" property="Key" condition="contains" value="SOFTWARE\Policies\Microsoft\Windows\PowerShell\ScriptBlockLogging" />
					<Condition component="RegistryItem" property="Key" condition="contains" value="SOFTWARE\Wow6432Node\Policies\Microsoft\Windows\PowerShell\ScriptBlockLogging" />
				</operator>
				<operator type="OR">
					<Condition component="RegistryItem" property="Key" condition="ends" value="EnableScriptBlockLogging" />
					<Condition component="RegistryItem" property="Key" condition="ends" value="EnableScriptBlockInvocationLogging" />
				</operator>
			</operator>
		</Operation>
	</Operations>
</rule>