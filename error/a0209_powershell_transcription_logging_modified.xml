<?xml version="1.0" encoding="utf-8"?>
<rule>
	<name>PowerShell transcription modified [A0209]</name>
	<severity>Warning</severity>
	<Operations>
		<Operation type="RegSetValue">
			<operator type="AND">
				<operator type="OR">
					<Condition component="RegistryItem" property="Key" condition="contains" value="SOFTWARE\Policies\Microsoft\Windows\PowerShell\Transcription" />
					<Condition component="RegistryItem" property="Key" condition="contains" value="SOFTWARE\Wow6432Node\Policies\Microsoft\Windows\PowerShell\Transcription" />
				</operator>
				<operator type="OR">
					<Condition component="RegistryItem" property="Key" condition="ends" value="EnableTranscripting" />
					<Condition component="RegistryItem" property="Key" condition="ends" value="EnableInvocationHeader" />
					<Condition component="RegistryItem" property="Key" condition="ends" value="OutputDirectory" />
				</operator>
			</operator>
		</Operation>
	</Operations>
</rule>